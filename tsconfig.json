{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2017", "dom"],
    "module": "ES2015",
    "moduleResolution": "node",
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": false,
    "sourceMap": true,
    "target": "ES5",
    "allowJs": true
  },
  "include": ["src", "test"],
  "exclude": ["node_modules"]
}
